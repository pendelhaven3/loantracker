<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.VBox?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.cell.PropertyValueFactory?>
<?import javafx.scene.control.ToolBar?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.text.Text?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.layout.GridPane?>
<?import com.pj.loantracker.gui.table.LoanPaymentsTableView?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.layout.Region?>
<?import com.pj.loantracker.gui.component.AppDatePicker?>

<BorderPane xmlns:fx="http://javafx.com/fxml" fx:controller="com.pj.loantracker.controller.LoanController">
	<top>
		<ToolBar>
			<Button text="Back" onAction="#doOnBack" />
			<Button fx:id="deleteButton" text="Delete" onAction="#deleteLoan" disable="true" />
		</ToolBar>
	</top>
	<center>
		<VBox alignment="center" spacing="10">
			<GridPane vgap="10" alignment="center">
				<Label text="Client" prefWidth="100" 
					GridPane.columnIndex="0" GridPane.rowIndex="0" />
				<ComboBox fx:id="clientComboBox" prefWidth="300"
					GridPane.columnIndex="1" GridPane.rowIndex="0" />
				<Label text="Amount"
					GridPane.columnIndex="0" GridPane.rowIndex="1" />
				<TextField fx:id="amountField"
					GridPane.columnIndex="1" GridPane.rowIndex="1" />
				<Label text="Interest (%)"
					GridPane.columnIndex="0" GridPane.rowIndex="2" />
				<TextField fx:id="interestField"
					GridPane.columnIndex="1" GridPane.rowIndex="2" />
				<Label text="Loan Date"
					GridPane.columnIndex="0" GridPane.rowIndex="3" />
				<AppDatePicker fx:id="loanDatePicker"
					GridPane.columnIndex="1" GridPane.rowIndex="3" />
			</GridPane>
		
			<Button text="Save" onAction="#saveLoan" />
			
			<LoanPaymentsTableView fx:id="paymentsTable">
				<columnResizePolicy><TableView fx:constant="CONSTRAINED_RESIZE_POLICY"/></columnResizePolicy>
			</LoanPaymentsTableView>
			
			<HBox spacing="10" alignment="center">
				<Button text="Add Payment" onAction="#addLoanPayment" />
				<Button text="Delete Payment" onAction="#deleteLoanPayment" />
			</HBox>
			
			<Region />
			
		</VBox>
	</center>
</BorderPane>
